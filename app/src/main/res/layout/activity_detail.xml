<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back_black_24dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingLeft="8dp"
                android:layout_weight="10"
                android:text="Detail Destination"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/detailPhoto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:src="@color/colorAccent"/>

        <TextView
            android:id="@+id/detailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="@dimen/text_horizontal_margin"
            android:paddingEnd="@dimen/text_horizontal_margin"
            android:paddingTop="@dimen/text_vertical_margin"
            android:paddingBottom="@dimen/text_vertical_margin"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/text_horizontal_margin"
            android:paddingBottom="@dimen/text_horizontal_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_thumb_up_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 LIKES"
                    android:paddingTop="@dimen/text_horizontal_margin"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_stars_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="120 FAVORITES"
                    android:paddingTop="@dimen/text_horizontal_margin"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location_on_black_24dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="140 PLACES"
                    android:paddingTop="@dimen/text_horizontal_margin"
                    android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/detailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingStart="@dimen/text_horizontal_margin"
            android:paddingEnd="@dimen/text_horizontal_margin"
            android:paddingTop="@dimen/text_vertical_margin"
            android:paddingBottom="@dimen/text_vertical_margin"
            android:textSize="18sp"
            android:text="Description"/>

        <Button
            android:id="@+id/btnBook"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/book"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10sp"
            android:layout_marginStart="10sp"
            android:layout_marginEnd="10sp"
            android:textSize="12sp" />




    </LinearLayout>




